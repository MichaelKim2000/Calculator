<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO"> <!-- “TRACE”, “DEBUG”, “INFO”, “WARN”, “ERROR” and “FATAL” -->
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
    	<Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="com.cimpa.calculus" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.cimpa.calculus.calculator" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.cimpa.calculus.calculator.Addition" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>


</Configuration>